---
import Layout from '../layouts/Page.astro';
import { Container } from '@components/odyssey-theme';

const seo = {
  title: 'Thank You | Han Lab (UPenn)',
  description: 'Thanks for contacting Han Lab.',
};
---

<Layout {seo}>
  <Container>
    <section class="thankyou__section">
      <h1>Thank you</h1>
      <p>Your message has been received. We will get back to you soon.</p>
    </section>
  </Container>
</Layout>

<style>
  .thankyou__section { margin: var(--section-margin) auto; }
  .thankyou__section h1 { margin-bottom: 0.5rem; }
</style>

