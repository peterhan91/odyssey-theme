---
import { Header, Button, Container } from '@components/odyssey-theme';
import Layout from './Base.astro';
import type { Props as BaseHeadProps } from '../components/head/BaseHead.astro';
import Logo from '../components/Logo.astro';
import { Icon } from 'astro-icon/components';


export interface Props {
	seo?: BaseHeadProps;
}

const { seo } = Astro.props as Props;
---

<Layout seo={seo}>
	<Header rightMenu slot="header">
		<span slot="logo">
			<Logo />
		</span>
		<span slot="action-item" class="header-actions">
      <a class="social-link" href="https://scholar.google.com/citations?user=Hxm_OpAAAAAJ&hl=en" title="Google Scholar" aria-label="Google Scholar" target="_blank" rel="noopener noreferrer">
        <Icon name="ic:baseline-school" width="28" height="28" />
      </a>
      <a class="social-link" href="https://www.linkedin.com/in/tianyu-han-33025512a/" title="LinkedIn" aria-label="LinkedIn" target="_blank" rel="noopener noreferrer">
        <Icon name="mdi:linkedin" width="28" height="28" />
      </a>
      <a class="social-link" href="http://x.com/peterhan91" title="Twitter/X" aria-label="Twitter" target="_blank" rel="noopener noreferrer">
        <Icon name="mdi:twitter" width="28" height="28" />
      </a>
      <Button href="/join">Apply to Join</Button>
    </span>
	</Header>
	<div id="page">
		<slot />
	</div>
	<footer slot="footer" class="lab-footer">
		<Container>
			<div class="lab-footer__inner">
				<img
					class="lab-footer__crest"
					src="/assets/upenn-logo.png"
					alt="University of Pennsylvania logo"
					loading="lazy"
				/>
				<img
					class="lab-footer__logo"
					src="/assets/lab-logo.png"
					alt="Han Lab logo"
					loading="lazy"
				/>
				<div class="lab-footer__socials">
					<a
						class="lab-footer__social-link"
						href="https://www.linkedin.com/in/tianyu-han-33025512a/"
						target="_blank"
						rel="noopener noreferrer"
						aria-label="LinkedIn"
					>
						<Icon name="mdi:linkedin" width="28" height="28" />
					</a>
					<a
						class="lab-footer__social-link"
						href="http://x.com/peterhan91"
						target="_blank"
						rel="noopener noreferrer"
						aria-label="Twitter"
					>
						<Icon name="mdi:twitter" width="28" height="28" />
					</a>
				</div>
			</div>
			<div class="lab-footer__meta">
				<p>&copy; {new Date().getFullYear()} Han Lab. All rights reserved.</p>
			</div>
		</Container>
	</footer>
</Layout>

<style>
  .header-actions { display: inline-flex; align-items: center; gap: 0.75rem; }
  .header-actions .social-link { color: inherit; opacity: 0.84; text-decoration: none; display: inline-flex; }
  .header-actions .social-link:hover { opacity: 1; }
  /* Style the Apply to Join button to Penn red */
  .header-actions .btn {
    background-color: #990000; /* Penn dark red */
    color: #ffffff;
    border-radius: 0.25rem;
    border: 2px solid #990000;
  }
  .header-actions .btn:hover { background-color: #7a0000; border-color: #7a0000; }
  .lab-footer {
    background: #f1f3f5;
    color: var(--theme-on-bg);
    padding: 3rem 0 3rem 0;
  }
  .lab-footer__inner {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: 10rem;
  }
  .lab-footer__crest {
    max-width: 220px;
    width: 100%;
    height: auto;
    justify-self: end;
  }
  .lab-footer__logo {
    max-height: 140px;
    width: auto;
  }
  .lab-footer__socials {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }
  .lab-footer__socials {
    justify-self: start;
  }
  .lab-footer__social-link {
    color: inherit;
    opacity: 0.84;
  }
  .lab-footer__social-link:hover {
    opacity: 1;
  }
  .lab-footer__meta {
    margin-top: 2rem;
    text-align: center;
    font-size: var(--font-size-sm);
    color: rgba(0, 0, 0, 0.6);
  }
  @media (max-width: 768px) {
    .lab-footer__inner {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      justify-items: center;
    }
    .lab-footer__crest {
      margin: 0 auto;
      justify-self: center;
    }
    .lab-footer__socials {
      justify-self: center;
    }
  }
</style>
