---
const { images = [], interval = 4000 } = Astro.props as { images: string[]; interval?: number };
---

<div class="auto-gallery" style={`--switch-int:${interval}ms`}>
  {images.map((src, i) => (
    <img src={src} alt={`gallery-${i+1}`} class={`gallery-img gallery-img--${i}`} loading="lazy" />
  ))}
</div>

<style>
  .auto-gallery {
    position: relative;
    width: 100%;
    max-width: 520px;
    aspect-ratio: 3 / 1; /* wide banner */
    overflow: hidden;
    border-radius: calc(var(--theme-shape-radius) / 2);
  }
  .auto-gallery .gallery-img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: contain;
    background: transparent;
    opacity: 0;
    animation: fade var(--switch-int) linear infinite;
  }
  /* Stagger for two images */
  .auto-gallery .gallery-img--0 { animation-delay: 0ms; }
  .auto-gallery .gallery-img--1 { animation-delay: calc(var(--switch-int) / 2); }

  @keyframes fade {
    0%   { opacity: 1; }
    45%  { opacity: 1; }
    55%  { opacity: 0; }
    100% { opacity: 0; }
  }
</style>
